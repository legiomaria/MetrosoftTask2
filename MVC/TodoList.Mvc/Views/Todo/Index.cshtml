@using TodoList.Api.Models.Entities
@model IEnumerable<Todo>

@{
    ViewData["Title"] = "Todo List";
}

<h2>Todo List</h2>

<div class="todo-container">
    <form id="addTodoForm" method="post" class="input-group">
        <input type="text" id="newTodoTitle" placeholder="Add a new todo..." />
        <button type="button" id="addTodoButton" class="add-todo">Add Todo</button>
    </form>

    <div class="filter-buttons">
        <button id="filterAllButton" class="filter-button">All</button>
        <button id="filterActiveButton" class="filter-button">Active</button>
        <button id="filterCompletedButton" class="filter-button">Completed</button>
    </div>

    <div id="todoList" class="todo-list">
        @foreach (var todo in Model)
        {
            <partial name="_TodoItemPartial" model="todo" />
        }
    </div>

    <button id="clearCompletedButton" class="clear-completed">Clear Completed</button>
</div>

@section Scripts {
    <script src="~/js/todo.js"></script>
    <!-- Add this in the head section of your HTML or layout view -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

}

